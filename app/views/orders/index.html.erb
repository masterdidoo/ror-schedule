<div class="page-header">
  <%= link_to new_order_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Order
  <% end %>
  <h1>Listing orders</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Number</th>
            <th>Delivery date</th>
            <th>Delivery shift</th>
            <th>Volume</th>
            <th>Handling unit quantity</th>
            <th>Load time</th>
            <th>Unload time</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @orders) do |order| %>
            <td><%= order.number %></td>
            <td><%= order.delivery_date %></td>
            <td><%= order.delivery_shift %></td>
            <td><%= order.volume %></td>
            <td><%= order.handling_unit_quantity %></td>
            <td><%= order.load_time %></td>
            <td><%= order.unload_time %></td>
            <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
