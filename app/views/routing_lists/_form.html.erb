<%= form_for(@routing_list, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @routing_list.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@routing_list.errors.count, "error") %> prohibited this routing_list from being saved:</h4>

      <ul>
      <% @routing_list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :delivery_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :delivery_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :delivery_shift, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :delivery_shift, Order.delivery_shifts.keys, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
